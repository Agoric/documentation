{
  "extends": ["next/core-web-vitals", "eslint:recommended", "@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "regex"],
  "rules": {
    "no-invalid-regexp": "error",
    "no-control-regex": "error",
    "no-empty-character-class": "error",
    "no-regex-spaces": "error",
    "regex/invalid": "error",
    "regex/no-unused-capturing-group": "warn",
    "regex/no-useless-escape": "warn",
    "regex/no-useless-quantifier": "warn",
    "regex/no-useless-range": "warn",
    "regex/no-useless-two-nums-quantifier": "warn",
    "regex/no-zero-quantifier": "error",
    "regex/optimal-quantifier-concatenation": "warn",
    "regex/prefer-escape-replacement-dollar-char": "warn",
    "regex/prefer-predefined-assertion": "warn",
    "regex/prefer-quantifier": "warn",
    "regex/prefer-range": "warn",
    "regex/sort-alternatives": "warn",
    "regex/use-ignore-case": "warn",
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "@typescript-eslint/no-explicit-any": "warn",
    "prefer-const": "error",
    "no-var": "error"
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
